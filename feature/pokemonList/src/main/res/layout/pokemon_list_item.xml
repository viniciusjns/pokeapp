<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/dimen_24dp"
    android:paddingEnd="@dimen/dimen_24dp">

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/dimen_24dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:background="@drawable/rounded_bg"
        tools:background="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/iv_pokeball_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_pokeball"
        app:layout_constraintTop_toTopOf="@+id/fl_container"
        app:layout_constraintEnd_toEndOf="@+id/fl_container"
        app:layout_constraintBottom_toBottomOf="@+id/fl_container"/>

    <ImageView
        android:id="@+id/iv_balls_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:src="@drawable/ic_balls"
        app:layout_constraintEnd_toEndOf="@+id/fl_container"
        app:layout_constraintHorizontal_bias="0.3"
        app:layout_constraintStart_toStartOf="@+id/fl_container"
        app:layout_constraintTop_toTopOf="@+id/fl_container" />

    <ImageView
        android:id="@+id/iv_picture"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginEnd="@dimen/dimen_16dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fl_container"
        app:layout_constraintBottom_toBottomOf="@+id/fl_container"/>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_16dp"
        android:textSize="@dimen/dimen_12sp"
        android:textColor="@color/dark_gray"
        android:fontFamily="@font/sf_pro_display_bold"
        tools:text="#001"
        app:layout_constraintTop_toTopOf="@+id/fl_container"
        app:layout_constraintStart_toStartOf="@+id/fl_container"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_16dp"
        android:textSize="@dimen/dimen_24sp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/sf_pro_display_bold"
        app:layout_constraintTop_toBottomOf="@+id/tv_number"
        app:layout_constraintStart_toStartOf="@+id/fl_container"
        tools:text="Bulbasaur"/>

</androidx.constraintlayout.widget.ConstraintLayout>